# Telegram Bot Token (получить у BotFather в Telegram)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Manus API Key (получить в личном кабинете Manus)
MANUS_API_KEY=your_manus_api_key_here

# Manus API Base URL (по умолчанию https://api.manus.ai)
MANUS_BASE_URL=https://api.manus.ai

# ID вашего Manus Project (с KB + master prompt для пресейла)
MANUS_PROJECT_ID=your_project_id_here

# Опционально: список ID пользователей Telegram, которым разрешен доступ (через запятую)
# Если не указано - доступ открыт для всех
ALLOWED_USER_IDS=123456789,987654321

# Опционально: быстрый режим (1 = да, 0 = нет)
# При QUICK_MODE=1 бот не задает вопросы, использует значения по умолчанию
QUICK_MODE=0

# Опционально: таймаут ожидания результата задачи в секундах (по умолчанию 1500 = 25 минут)
TASK_TIMEOUT=1500

# Опционально: интервал polling в секундах (по умолчанию 10)
POLLING_INTERVAL=10
